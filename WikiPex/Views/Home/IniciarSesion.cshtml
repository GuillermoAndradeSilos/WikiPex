@model WikiPex.Models.Login
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <link href="~/EstiloLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="contenedorlogin">
        <img src="~/Imagenes/FondoLogin.jpeg" width="100%" height="100%" />
        <div class="pruebalogindiv">
            <h1>Iniciar Sesión</h1>
            <form method="post" action="~/home/IniciarSesion">
                <label>Usuario:</label>
                <input style="margin-bottom:15px;" type="text" asp-for="UserName" /><br />
                <label>Contraseña:</label>
                <input type="text" asp-for="Password" />
                <br />
                @Html.ValidationSummary()
                <input type="submit" value="Ingresar" />
            </form>
        </div>
    </div>
</body>
</html>
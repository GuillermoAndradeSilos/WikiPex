@model WikiPex.Models.Personajes
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdmin";
}

<form method="post" action="~/administrador/personajes/eliminar">
    <div>
        <h1>Eliminar Personaje</h1>

        <input type="hidden" id="id" asp-for="Id" />
        <p>¿Está seguro de eliminar al personaje:"<span id="nombreCategoria">@(Model.Nombre)</span>"?</p>

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Si" id="btnSi" />
            <a href="~/administrador/personajes"><input type="button" value="No" id="btnNo" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>
@model WikiPex.Models.Habilidades
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdmin";
}

<form method="post" action="~/Administrador/Habilidades/Editar">
    <div>
        <h1>Editar Habilidades</h1>

        <input type="hidden" id="id" asp-for="IdHabilidades" />

        <label>Nombre Tactica:</label>
        <input type="text" id="txtNombreTactica" required="required" asp-for="NombreTactica" />
        <label>Descripción Tactica:</label>
        <textarea rows="2" cols="20" id="txtDescripcionTactica" required="required" asp-for="@(Model.DescripcionTactica)"></textarea>
        <label>Nombre Pasiva:</label>
        <input type="text" id="txtNombrePasiva" required="required" asp-for="NombrePasiva" />
        <label>Descripción Pasiva:</label>
        <textarea rows="2" cols="20" id="txtDescripcionPasiva" required="required" asp-for="@(Model.DescripcionPasiva)"></textarea>
        <label>Nombre Definitiva:</label>
        <input type="text" id="txtNombreDefinitiva" required="required" asp-for="NombreDefinitiva" />
        <label>Descripción Definitiva:</label>
        <textarea rows="2" cols="20" id="txtDescripcionDefinitiva" required="required" asp-for="@(Model.DescripcionDefinitiva)"></textarea>

        <div class="botones">
            <p id="error"> @Html.ValidationSummary() </p>
            <input type="submit" value="Guardar" id="btnGuardar" />
            <a href="~/Administrador/Habilidades"><input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>